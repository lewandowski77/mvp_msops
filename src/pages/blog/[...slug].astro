---
import Layout from '../../layouts/Layout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);

const formatDate = (date: Date) => {
  return date.toLocaleDateString('pl-PL', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};
---

<Layout title={`${post.data.title} | MVP.Blog`} description={post.data.description}>
  <article class="max-w-3xl mx-auto px-6 py-16">
    <header class="mb-8">
      <a
        href="/blog"
        class="inline-flex items-center gap-2 text-accent hover:text-accent-light mb-6 text-sm font-medium"
      >
        &larr; Powrot do bloga
      </a>

      <h1 class="text-4xl font-bold text-zinc-900 mb-4">
        {post.data.title}
      </h1>

      <div class="flex items-center gap-4 text-zinc-500">
        <time datetime={post.data.date.toISOString()}>
          {formatDate(post.data.date)}
        </time>
      </div>

      {post.data.tags && (
        <div class="flex gap-2 mt-4">
          {post.data.tags.map((tag: string) => (
            <span class="bg-accent/10 text-accent px-3 py-1 rounded-full text-sm font-medium">
              {tag}
            </span>
          ))}
        </div>
      )}
    </header>

    {post.data.image && (
      <img
        src={post.data.image}
        alt={post.data.title}
        class="w-full rounded-xl mb-8"
      />
    )}

    <div class="prose">
      <Content />
    </div>
  </article>
</Layout>
