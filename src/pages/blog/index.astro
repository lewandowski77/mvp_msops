---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const formatDate = (date: Date) => {
  return date.toLocaleDateString('pl-PL', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};
---

<Layout title="Blog | MVP.Blog" description="Artykuly o Microsoft Dynamics 365, AI i automatyzacji.">
  <div class="max-w-3xl mx-auto px-6 py-16">
    <header class="mb-12">
      <h1 class="text-4xl font-bold text-zinc-900 mb-4">Blog</h1>
      <p class="text-xl text-zinc-600">
        Artykuly o technologiach Microsoft, sztucznej inteligencji i automatyzacji procesow biznesowych.
      </p>
    </header>

    {posts.length > 0 ? (
      <div class="space-y-2">
        {posts.map((post) => (
          <article class="group">
            <a href={`/blog/${post.id}`} class="block">
              <div class="py-6 border-b border-zinc-100 transition-colors group-hover:border-accent/30">
                <h2 class="text-xl font-semibold text-zinc-900 group-hover:text-accent transition-colors mb-2">
                  {post.data.title}
                </h2>
                <p class="text-zinc-600 mb-3 line-clamp-2">
                  {post.data.description}
                </p>
                <div class="flex items-center gap-4 text-sm text-zinc-500">
                  <time datetime={post.data.date.toISOString()}>
                    {formatDate(post.data.date)}
                  </time>
                  {post.data.tags && (
                    <div class="flex gap-2">
                      {post.data.tags.map((tag: string) => (
                        <span class="bg-zinc-100 px-2 py-0.5 rounded text-xs">
                          {tag}
                        </span>
                      ))}
                    </div>
                  )}
                </div>
              </div>
            </a>
          </article>
        ))}
      </div>
    ) : (
      <p class="text-zinc-500 text-center py-12">
        Brak wpisow. Wkrotce pojawia sie nowe tresci!
      </p>
    )}
  </div>
</Layout>
