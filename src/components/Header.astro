---
const navLinks = [
  { href: '/', label: 'Start' },
  { href: '/blog', label: 'Blog' },
  { href: '/about', label: 'O mnie' },
  { href: '/instrukcja', label: 'Instrukcja' },
];

const currentPath = Astro.url.pathname;
---

<header class="border-b border-zinc-100">
  <nav class="max-w-3xl mx-auto px-6 py-5 flex items-center justify-between">
    <a href="/" class="text-xl font-bold text-zinc-900 hover:text-accent transition-colors">
      MVP<span class="text-accent">.</span>Blog
    </a>

    <div class="flex items-center gap-8">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class:list={[
            'text-sm font-medium transition-colors',
            currentPath === link.href || (link.href !== '/' && currentPath.startsWith(link.href))
              ? 'text-accent'
              : 'text-zinc-600 hover:text-zinc-900'
          ]}
        >
          {link.label}
        </a>
      ))}
    </div>
  </nav>
</header>
